@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset password";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h2 class="main-heading">@ViewData["Title"]</h2>
        <hr />

        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Code" type="hidden" />

            <div class="form-group form-field email-icon">
                <input asp-for="Email" class="form-control disabled" placeholder="Email" readonly="readonly" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group form-field password-icon">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group form-field password-icon">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Re-type Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-default hvr-back-pulse">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
