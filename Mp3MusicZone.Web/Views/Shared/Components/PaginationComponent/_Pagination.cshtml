@model PaginationComponentViewModel

<div id="pagination-menu">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item
                       @Model.PreviousDisabled">
                <a asp-action="@Model.ActionToCall"
                   asp-route-searchTerm="@Model.SearchTerm"
                   asp-route-page="@Model.Previous"
                   class="page-link"
                   aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>

            @for (int i = Model.StartPage; i <= Model.EndPage; i++)
            {
                string active = i == Model.Current ? "active" : string.Empty;

                <li class="page-item class @active">
                    <a asp-action="@Model.ActionToCall"
                       asp-route-searchTerm="@Model.SearchTerm"
                       asp-route-page="@i"
                       class="page-link">
                        @i
                    </a>
                </li>
            }

            <li class="page-item
                       @Model.NextDisabled">
                <a asp-action="@Model.ActionToCall"
                   asp-route-searchTerm="@Model.SearchTerm"
                   asp-route-page="@Model.Next"
                   class="page-link"
                   aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
</div>