@{
    string messageType = (string)this.TempData[TempDataMessageTypeKey];
    string messageText = (string)this.TempData[TempDataMessageTextKey];
}

@if (!string.IsNullOrEmpty(messageType) && !string.IsNullOrEmpty(messageText))
{
    <div class="alert
                alert-@messageType
                alert-dismissable
                text-center
                col-md-6
                col-md-offset-3">
        <button type="button"
                class="close"
                data-dismiss="alert"
                aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Html.Raw(messageText)
    </div>
}

